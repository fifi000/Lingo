
<div class="card mb-3">
	<div class="row g-0">
		<div class="col-md-2">
			<img src="@Serie.Cover" class="img-fluid rounded-start" alt="Cover">
		</div>
		<div class="col-md-10">
			<div class="card-body">
				<h5 class="card-title">@Serie.Name</h5>
				<p class="card-text"><small class="text-muted">@Serie.ReleaseDate</small></p>
				@if (ShortDescription)
				{
					<p class="card-text">@TextShortener(Serie.Description, 200)</p>
				}				
				else
				{
					<p class="card-text">@Serie.Description</p>
				}
			</div>
		</div>
	</div>
</div>


@code {
	[Parameter]
	public SerieModel Serie { get; set; }

	[Parameter]
	public bool ShortDescription { get; set; } = false;

	private string TextShortener(string text, int maxChars)
	{
		if (text.Length > maxChars)
		{
			return $"{text.Substring(0, maxChars)}...";
		}

		return text;
	}
}
