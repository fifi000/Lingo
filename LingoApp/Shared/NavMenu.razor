@inject NavigationManager NavigationManager

<div class="shadow-lg pd-3">
	<nav class="navbar navbar-expand-lg navbar-light bg-success bg-opacity-50 px-4 border-bottom border-2">
		<div class="d-flex justify-content-between collapse navbar-collapse">
			<a class="navbar-brand" href=""><span class="badge bg-success fs-4">Lingo</span></a>

@*			<button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
				<span class="navbar-toggler-icon"></span>
			</button>*@

			<form class="d-flex" @onsubmit="@SearchSeries">
				<input @bind-value="SearchPhrase" class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
				<button class="btn btn-outline-success" type="submit">Search</button>
			</form>
		</div>
	</nav>
</div>

@code {
	public string SearchPhrase { get; set; }

	private bool _collapseNavMenu = true;
	private string _navMenuCssClass => _collapseNavMenu ? "collapse" : null;

	private void SearchSeries()
	{
		NavigationManager.NavigateTo($"/?SearchPhrase={SearchPhrase}");
	}

	private void ToggleNavMenu()
	{
		_collapseNavMenu = !_collapseNavMenu;
	}
}